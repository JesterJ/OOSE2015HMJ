public class KeyListener implements Actionlistener, Keylistener{

  Timer t = new Timer(5, this);
  double x = 0, y = 0, velx = 0, vely = 0;
  
  public KeyListener(){
    t.start();
    addKeyListener(this);
    setFocusable(this); //allows us to use the keylistener
    setFocusTraversalKeyEnabled(false); //disabling the possibility of using uncommon keys
  }
  
  public void paintComponent(graphics g){
    super.paintComponent(g);
    Graphics2D g2 = (Graphics2D) g;
    g2.fill( new Ellipse2D.double(x,y,40,40));
  }
  
  public void actionPerformed(ActionEvent e){
    repaint();
    x += velx;
    y += vely; // changes the x&y coordinates and draws them at the new position
  }
  
  public void left(){
    velx = velx-1;
  }
  
  public void right(){
    velx = velx+1;
  }
  
  public void rotate(){
    
  }
  
  public void keyPressed(KeyEvent e){
    int code = e.getKeyCode(); // variable "code" stores which key is pressed on the keyboard
    if( code == KeyEvent.VK_LEFT){ //if the "Left" key is pressed then an action is performed
      left();
    }
    if( code == KeyEvent.VK_RIGHT){
    right();
    }
    if( code == KeyEvent.VK_UP){
    rotate();
    }
  }
  
  public void keyTyped(KeyEvent e) {} //No action should happen when the key is typed
  public void keyReleased(KeyEvent e){} //No action should happen when the key is released

}
